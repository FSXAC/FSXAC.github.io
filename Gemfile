source 'https://rubygems.org'

# Use github-pages gem for GitHub Pages compatibility
gem 'github-pages', group: :jekyll_plugins

# Required for Ruby 3.0+ and local development
gem 'webrick'

# Additional plugins (many are included in github-pages gem)
group :jekyll_plugins do
  gem 'jekyll-sitemap'
  gem 'jemoji'
  gem 'jekyll-seo-tag'
  gem 'jekyll-feed'
  gem 'jekyll-paginate'
end
